<h1>Which restaurant would you like to order from?</h1>

<%= form_for @order, :html => {class: 'ui form'}, :url => url_for(:controller => 'orders', :action => 'new2') do |f| %>
	<% @restaurants.each do |restaurant| %>
		<div class="ui card">
		  <div class="image">
		    <img src=<%=restaurant.img_url%>>
		  </div>
		  <div class="content">
		    <a class="header"><input type="radio" name="restaurant_id" value=<%=restaurant.id.to_s%>> <%=restaurant.name%></a>
		    <div class="description">
		      <%= restaurant.description%>
		    </div>
		  </div>
		  <div class="extra content">
		  </div>
		</div>
	<% end %>
	<br>
  	<%= f.submit %>
<% end %>

