
<h1><%=@restaurant.name%></h1>

<h1>Menu</h1>

<%= form_tag orders_path, {:class => 'ui form'} do %>
  <% @restaurant_menu.each do |item| %>
	<div class="ui card">
	  <div class="image">
	    <img src=<%=item.img_url%>>
	  </div>
	  <div class="content">
	    <a class="header"><%=item.name%></a>
	    <div class="description">
	      <%= number_field_tag("order_items[#{item.name}]", value = 0, min: 0, step: 1) %>
	    </div>
	  </div>
	  <div class="extra content">
	  </div>
	</div>
  <% end %>
  
  <%= hidden_field(:restaurant, :id) %>
  <br>
  <%= submit_tag "Submit Order" %>
<% end %>