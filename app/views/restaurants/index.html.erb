<h1>All Restaurants</h1>

<% @restaurants.each do |restaurant| %>
                        <div class="ui card">
							<div class="image">
							    <img src=<%=restaurant.img_url%>>
							  </div>
							  <div class="content">
							    <a class="header"><%= link_to(restaurant.name, restaurant_path(restaurant)) %></a>
							    <div class="meta">
							    </div>
							    <div class="description">
							      <%= restaurant.description%>
							    </div>
							  </div>
							  <div class="extra content">
							</div>
						</div>
<% end %>