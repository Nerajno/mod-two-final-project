<h1>Restaurant Registration</h1>

<%= form_for @restaurant, :html => {class: 'ui form'} do |f| %>
  <%= label_tag("Restaurant Username: ") %>
  <%= f.text_field :rest_name %><br />

  <%= label_tag("Password: ") %>
  <%= f.password_field :password %><br />

  <%= label_tag("Restaurant Name: ") %>
  <%= f.text_field :name %><br />

  <%= label_tag("Image URL: ") %>
  <%= f.text_field :img_url %><br />

  <%= label_tag("Description: ") %>
  <%= f.text_area :description %><br />

  <%= label_tag("Address: ") %>
  <%= f.text_field :address %><br />

  <%= f.submit %>
<% end %>