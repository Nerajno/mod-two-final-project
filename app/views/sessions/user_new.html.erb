<div class='container'>
<h1>User Login</h1>

<%= form_tag('/users/login', method: :post, :class => 'ui form') do %>
<p>Login form</p>
<%= form_tag do %>
  <%= label_tag("Username: ") %>
  <%= text_field_tag(:username) %>
  <%= label_tag("Password: ") %>
  <%= password_field_tag(:password) %>
  <%= submit_tag("Login") %>
<% end %>

<%= button_to "Register as an user", new_user_path, method: :get %>

<%= button_to "Home", "/", method: :get %>
<%end%>
</div>