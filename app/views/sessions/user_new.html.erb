<h1>User New</h1>

<% if flash[:info] %>
  <p style="color: red;"><%= flash[:info] %></p>
<% end %>
  
<p>Login form</p>
<%= form_tag do %>
  <%= label_tag("Username: ") %>
  <%= text_field_tag(:username) %>
  <%= label_tag("Password: ") %>
  <%= password_field_tag(:password) %>
  <%= submit_tag("Login") %>
<% end %>

    